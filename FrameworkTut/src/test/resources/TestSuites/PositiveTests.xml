<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="PositiveTestSuite" verbose="2" parallel="classes" thread-count="2">
    <test name="PositiveTest-chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name = "com.herokuapp.theinternet.loginPageTests.PositiveLogInTests"/>
            <class name = "com.herokuapp.theinternet.checkboxesTests.CheckBoxesTests"/>
            <class name = "com.herokuapp.theinternet.dropDownTests.DropDowntests"/>
            <class name = "com.herokuapp.theinternet.javaScriptAlertTests.JavaScriptAlertsTests"/>
            <class name = "com.herokuapp.theinternet.windowsTests.NewWindowPageTests"/>
            <class name = "com.herokuapp.theinternet.wysiwygEditorTests.EditorTests"/>
            <class name = "com.herokuapp.theinternet.uploadFilesTests.FileUploaderTests"/>
            <class name = "com.herokuapp.theinternet.dragAndDropTests.DragAndDrop"/>
            <class name = "com.herokuapp.theinternet.softAssert.SoftAssertJavaScriptAssertTests"/>
            <class name = "com.herokuapp.theinternet.javascriptErrorTests.jsErrorTest"/>

        </classes>
    </test>

    <test name="PositiveTest-firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name = "com.herokuapp.theinternet.loginPageTests.PositiveLogInTests"/>
            <class name = "com.herokuapp.theinternet.checkboxesTests.CheckBoxesTests"/>
            <class name = "com.herokuapp.theinternet.dropDownTests.DropDowntests"/>
            <class name = "com.herokuapp.theinternet.javaScriptAlertTests.JavaScriptAlertsTests"/>
            <class name = "com.herokuapp.theinternet.windowsTests.NewWindowPageTests"/>
            <class name = "com.herokuapp.theinternet.wysiwygEditorTests.EditorTests"/>
            <class name = "com.herokuapp.theinternet.uploadFilesTests.FileUploaderTests"/>
            <class name = "com.herokuapp.theinternet.dragAndDropTests.DragAndDrop"/>
            <class name = "com.herokuapp.theinternet.softAssert.SoftAssertJavaScriptAssertTests"/>
            <class name = "com.herokuapp.theinternet.javascriptErrorTests.jsErrorTest"/>

        </classes>
    </test>

</suite>